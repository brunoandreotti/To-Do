<h1>Editar tarefa</h1>
<form action="/tasks/edit" method="POST">
  <input type="hidden" name="id" value="{{task.id}}">
  <div class="form-control">
    <label for="title">Título da tarefa:</label>
    <input type="text" name="title" placeholder="Nome da sua tarefa" id="task-name" value="{{task.title}}">
  </div>
  <div class="form-control">
    <label for="description">Descrição:</label>
    <textarea name="description" placeholder="Descrição da sua tarefa" id="task-description">{{task.description}}</textarea>
  </div>
  <input type="submit" value="Atualizar tarefa">
</form>