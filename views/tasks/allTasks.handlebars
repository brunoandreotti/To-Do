<h1>Tarefas</h1>
<ul class="task-list">
  {{#each tasks}}
  <li>
    {{#if this.done}}
    <a href="/tasks/{{this.id}}" class="title done">{{this.title}}</a>
    {{else}}
    <a href="/tasks/{{this.id}}" class="title">{{this.title}}</a>
    {{/if}}
    <div class="actions">
      <form action="/tasks/updatestatus" method="POST">
        <input type="hidden" name="id" value="{{this.id}}">
        <input type="hidden" name="done" value="{{this.done}}">
        <button type="submit">
          <i class="bi bi-check2" id="complete-icon"></i>
        </button>
      </form>
      <a href="/tasks/edit/{{this.id}}"><i class="bi bi-pencil-square" id="edit-icon"></i></a>
      <form action="/tasks/remove" method="POST">
        <input type="hidden" name="id" value="{{this.id}}">
        <button type="submit">
          <i class="bi bi-x-lg" id="delete-icon"></i>
        </button>
      </form>
    </div>
  </li>
  {{/each}}
</ul>